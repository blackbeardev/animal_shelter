<% include ../partials/header %>


<div class="container">
  <h3>Edit <%=cat.name%></h3>
  <form class="contact-form" action="/adopt/cats/<%=cat._id%>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input type="text" class="form-control" id="exampleInputEmail1" name="cat[name]" value="<%=cat.name%>">
      </div>
      <div class="form-group">
        <label for="exampleInputName1">Image</label>
        <input type="text" class="form-control" id="exampleInputName1" name="cat[img]" value="<%=cat.img%>">
      </div>
      <div class="form-group">
        <label for="exampleInputName1">Gender</label>
        <input type="text" class="form-control" id="exampleInputName1" name="cat[gender]" value="<%=cat.gender%>">
      </div>
      <div class="form-group">
        <label for="exampleInputName1">Age</label>
        <input type="text" class="form-control" id="exampleInputName1" name="cat[age]" value="<%=cat.age%>">
      </div>
      <div class="form-group">
        <label for="exampleInputFile">Description</label>
        <textarea class="form-control" rows="6" name="cat[description]"><%=cat.description%></textarea>
      </div>
      <div class="form-group">
        <label for="exampleInputName1">Listed Date</label>
        <input type="text" class="form-control" id="exampleInputName1" name="cat[listed]" value="<%=cat.listed%>">
      </div>
      <button type="submit" class="btn btn-success">Submit</button>
  </form>
</div>


<% include ../partials/footer %>