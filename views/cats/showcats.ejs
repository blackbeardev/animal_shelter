<% include ../partials/header %>


<div class="container">
    <div class="dog-profiles">
        <h3> <%= cat.name %></h3>
        <img class="img-thumbnail img-responsive dog-profile-image" src="<%=cat.img%>" height="400" width="400">
        <p><span class="classification">Gender:</span> <%=cat.gender%></p>
        <p><span class="classification">Age:</span> <%=cat.age%> years old.</p>
        <p><span class="classification">Description:</span> <%=cat.description%></p>
        <p><span class="classification">Listing Date:</span> <%=cat.listed%></p>
        <p><span class="classification">ID:</span> <%=cat._id%></p>
        <div class="animal-actions">
            <a class="btn btn-info btn-lg enquire-btn" href="/adopt/enquire">Enquire</a>
            <a class="btn btn-warning btn-lg edit-btn" href="/adopt/cats/<%=cat._id%>/edit">Edit <%=cat.name%></a>
            <div class="delete-animal">  
                <form action="/adopt/cats/<%=cat._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger btn-lg">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="newCat">
    <a class="btn btn-primary btn-med" href="/adopt/cats">Back to all cats</a>
</div>


<% include ../partials/footer %>