<% include ../partials/header %>

<div class="container">
  <h2>ADD A CAT</h2>
  <form class="contact-form" action="/adopt/cats" method="POST">
      <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input type="text" class="form-control" id="exampleInputEmail1" name="cat[name]" placeholder="Name">
      </div>
      <div class="form-group">
        <label for="exampleInputName1">Image</label>
        <input type="text" class="form-control" id="exampleInputName1" name="cat[img]" placeholder="Image url">
      </div>
      <div class="form-group">
        <label for="exampleInputName1">Gender</label>
        <input type="text" class="form-control" id="exampleInputName1" name="cat[gender]" placeholder="Gender">
      </div>
      <div class="form-group">
        <label for="exampleInputName1">Age</label>
        <input type="text" class="form-control" id="exampleInputName1" name="cat[age]" placeholder="Age">
      </div>
      <div class="form-group">
        <label for="exampleInputFile">Description</label>
        <textarea class="form-control" rows="6" name="cat[description]" placeholder="Description"></textarea>
      </div>
      <div class="form-group">
        <label for="exampleInputName1">Listed Date</label>
        <input type="text" class="form-control" id="exampleInputName1" name="cat[listed]" placeholder="Listed Date">
      </div>
      <button type="submit" class="btn btn-success">Submit</button>
  </form>
</div>



<% include ../partials/footer %>