<% include ../partials/header %>

    <div class="container team-section">   <!--Container opening div-->
    
        <div>
            <h2>DOGS FOR ADOPTION</h2>
        </div>
        <div class="row">
            <div>
                <h4>Click on the read more button to find out more about each dog.</h4>
            </div>
        </div>
        <div class="row">
            
            
                <% dogs.forEach(function(dog) { %>
                <div class="col-md-3">
                    <h3> <%= dog.name %> </h3>
                    <img class="img-thumbnail img-responsive" src="<%= dog.img %>">
                    <div class="adopt-dogs">
                        <button class="btn btn-warning btn-lg"><a  href="/adopt/dogs/<%=dog._id %>">Read more</a></button>
                    </div>
                </div>
                    
                <% }); %>
        </div>
        <div class="newCat">
            <button class="btn btn-primary btn-med"><a href="/adopt/dogs/new">Add a new dog</a></button>
        </div>
    </div>  <!--Container closing div -->
    
<% include ../partials/footer %>