<% include ../partials/header %>


<div class="container">
    <div class="dog-profiles">
        <h3> <%= dog.name %></h3>
        <img class="img-thumbnail img-responsive dog-profile-image" src="<%=dog.img%>" height="400" width="40">
        <p><span class="classification">Gender:</span> <%=dog.gender%></p>
        <p><span class="classification">Age:</span> <%=dog.age%></p>
        <p><span class="classification">Description:</span> <%=dog.description%></p>
        <p><span class="classification">Listing Date:</span> <%=dog.listed%></p>
        <p><span class="classification">ID:</span> <%=dog._id%></p>
        <div>
            <a class="btn btn-info btn-lg enquire-btn" href="/adopt/enquire">Enquire</a>
            <a class="btn btn-warning btn-lg edit-btn" href="/adopt/dogs/<%=dog._id%>/edit">Edit <%=dog.name%></a>
            <div class="delete-animal">
                <form action="/adopt/dogs/<%=dog._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger btn-lg">Delete</button>
                </form>
            </div>

            
        </div>
    </div>
</div>

<div class="newCat">
    <a class="btn btn-primary btn-med" href="/adopt/dogs">Back to all dogs</a>
</div>


<% include ../partials/footer %>