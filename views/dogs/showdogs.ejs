<% include ../partials/header %>


<div class="container">
    <div class="dog-profiles">
        <h3> <%= dog.name %></h3>
        <img class="img-thumbnail img-responsive dog-profile-image" src="<%=dog.img%>" height="400" width="400">
        <p><span class="classification">Gender:</span> <%=dog.gender%></p>
        <p><span class="classification">Age:</span> <%=dog.age%></p>
        <p><span class="classification">Description:</span> <%=dog.description%></p>
        <p><span class="classification">Listing Date:</span> <%=dog.listed%></p>
        <p><span class="classification">ID:</span> <%=dog._id%></p>
        <div>
            <button class="btn btn-info btn-lg"><a href="/adopt/enquire">Enquire</a></button>
            <button class="btn btn-warning btn-lg"><a href="/adopt/dogs/<%=dog._id%>/edit">Edit <%=dog.name%></a></button>
            <div class="delete-animal">
                <form action="/adopt/dogs/<%=dog._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger btn-lg">Delete</button>
                </form>
            </div>

            
        </div>
    </div>
</div>

<div class="newCat">
    <button class="btn btn-primary btn-med"><a href="/adopt/dogs">Back to all dogs</a></button>
</div>


<% include ../partials/footer %>