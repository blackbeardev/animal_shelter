<% include ../partials/header %>


<div class="container">
  <h3>Edit <%=other.name%></h3>
  <form class="contact-form" action="/adopt/others/<%=other._id%>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input type="text" class="form-control" id="exampleInputEmail1" name="other[name]" value="<%=other.name%>">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Species</label>
        <input type="text" class="form-control" id="exampleInputEmail1" name="other[species]" value="<%=other.species%>">
      </div>
      <div class="form-group">
        <label for="exampleInputName1">Image</label>
        <input type="text" class="form-control" id="exampleInputName1" name="other[img]" value="<%=other.img%>">
      </div>
      <div class="form-group">
        <label for="exampleInputName1">Gender</label>
        <input type="text" class="form-control" id="exampleInputName1" name="other[gender]" value="<%=other.gender%>">
      </div>
      <div class="form-group">
        <label for="exampleInputName1">Age</label>
        <input type="text" class="form-control" id="exampleInputName1" name="other[age]" value="<%=other.age%>">
      </div>
      <div class="form-group">
        <label for="exampleInputFile">Description</label>
        <textarea class="form-control" rows="6" name="other[description]"><%=other.description%></textarea>
      </div>
      <div class="form-group">
        <label for="exampleInputName1">Listed Date</label>
        <input type="text" class="form-control" id="exampleInputName1" name="other[listed]" value="<%=other.listed%>">
      </div>
      <button type="submit" class="btn btn-success">Submit</button>
  </form>
</div>


<% include ../partials/footer %>