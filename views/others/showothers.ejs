<% include ../partials/header %>


<div class="container">
    <div class="dog-profiles">
        <h3> <%= other.name %></h3>
        <img class="img-thumbnail img-responsive dog-profile-image" src="<%=other.img%>" height="400" width="400">
        <h5><span class="classification">Species:</span> <%=other.species%></h5>
        <p><span class="classification">Gender:</span> <%=other.gender%></p>
        <p><span class="classification">Age:</span> <%=other.age%></p>
        <p><span class="classification">Description:</span> <%=other.description%></p>
        <p><span class="classification">Listing Date:</span> <%=other.listed%></p>
        <p><span class="classification">ID:</span> <%=other._id%></p>
        <div>
            <button class="btn btn-info btn-lg"><a href="/adopt/enquire">Enquire</a></button>
            <button class="btn btn-warning btn-lg"><a href="/adopt/others/<%=other._id%>/edit">Edit <%=other.name%></a></button>
            <div class="delete-animal">
                <form action="/adopt/others/<%=other._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger btn-lg">Delete</button>
                </form>
            </div>
            
            
        </div>
    </div>
</div>

<div class="newCat">
    <button class="btn btn-primary btn-med"><a href="/adopt/others">Back to all other animals</a></button>
</div>


<% include ../partials/footer %>