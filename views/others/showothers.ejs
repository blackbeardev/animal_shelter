<% include ../partials/header %>


<div class="container">
    <div class="dog-profiles">
        <h3> <%= other.name %></h3>
        <img class="img-thumbnail img-responsive dog-profile-image" src="<%=other.img%>">
        <h4><span class="classification">Species:</span><%=other.species%></h4>
        <p><span class="classification">Gender:</span> <%=other.gender%></p>
        <p><span class="classification">Age:</span> <%=other.age%> years old.</p>
        <p><span class="classification">Description:</span> <%=other.description%></p>
        <p><span class="classification">Listing Date:</span> <%=other.listed%></p>
        <p><span class="classification">ID:</span> <%=other._id%></p>
        <div>
            <button class="btn btn-info btn-lg"><a href="/adopt/enquire">Enquire about <%=other.name%></a></button>
            <button class="btn btn-warning btn-lg"><a href="/adopt/others/<%=other._id%>/edit">Edit</a></button>
            <form action="/adopt/others/<%=other._id%>?_method=DELETE" method="POST">
                <button>Delete</button>
            </form>
            
        </div>
    </div>
</div>

<div>
    <button><a href="/adopt/others">Back to all other animals</a></button>
</div>


<% include ../partials/footer %>